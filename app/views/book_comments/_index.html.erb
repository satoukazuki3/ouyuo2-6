<table>
  <tbody>
   <% book.book_comments.each do |book_comment| %>
     <tr>
      <td><%= link_to user_path(book_comment.user), remote: true do  %>
       <%= image_tag book_comment.user.get_profile_image, size:'100x100'%><br>
           <%= book_comment.user.name %>
          <% end %></td>
      <td><%= book_comment.comment %></td>
      <td><% if book_comment.user == current_user %>
        <td><%= link_to "削除", book_book_comment_path(book_comment.book, book_comment), method: :delete, class: "btn btn-danger pull-right", remote: true %></td>
          <% end %>
      </td>
      </tr>
      
    <% end %>
  </tbody>
</table>